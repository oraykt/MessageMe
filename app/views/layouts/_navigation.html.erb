<%= link_to "Chatroom", root_path, class: "item" %>
<a class="item">
  Messages
</a>
<div class="right menu">

  <% if !logged_in? %>
    <div class="item">
      <%= link_to 'Log in', login_path, class: 'ui primary button' %>
    </div>
    <div class="item">
      <%= link_to 'Sign up', login_path, class: 'ui green button' %>
    </div>
  <% else %>
    <div class="ui dropdown item">
      Account <i class="dropdown icon"></i>
      <div class="menu">
        <% if logged_in? %>
          <%= link_to 'Details', '#', class: 'item'%>
          <%= link_to 'Log out', logout_path, method: :delete, class: 'item' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>